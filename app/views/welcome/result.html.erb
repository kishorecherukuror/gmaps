<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

 		<!-- scrollToTop -->	
		<a href="#" class="scrollToTop">
			<i class="fa fa-angle-up fa-2x"></i>
		</a>
		<!-- ./scrollToTop -->
        		 
		<!-- header -->	
		      <%= render "header" %>
        <!-- ./header -->	
				
		<!-- Details -->
        <% if @search  %>	
		<section id="" class="section light-bg">
			<div class="container mt25">
            <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-3">
                
                <div class="location_panel">
                <h2>Locations</h2>
                    <ul>
	                <% @places["locations"].each do |p|%>
	                	<li><a href="#"><i class="fa fa-user" aria-hidden="true"></i> <%= p["latitudeE7"] %>, <%= p["longitudeE7"] %> <span class="light_txt">(1)</span></a> </li>
	                <% end %>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-9">
            	<div class="location_map">
                            <div style='width: auto;'>
                              <div id="map" style='width: auto; height: 500px;'></div>
                            </div>
                </div>
            </div>
            </div>
        </div>
		</section>
        <% else %>
            <br/><br/><br/><br/><h1>Please make valid seach</h1>
        <% end %>


		<!-- ./Details -->

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>